.roadmap-link
  width: 90px;
  margin: -10px auto 20px auto;
  position: relative;
  text-transform: none;
  font-size: 11px;
  font-weight: 400;
  padding-right: 10px;
  white-space: nowrap;

  &__link
    text-decoration: none;
    color: rgba($color.primary, 0.5)

  &__icon
    position: absolute;
    right: -3px;
    top: -4px;
    width: 14px;
    height: 14px;
    // background-color: #FFC107;
    .so-icon
      color: #FFC107;

.block__title .roadmap-link
  top: 1px;
  float: right;
  margin: 0;

.block__title .roadmap-link .roadmap-link__icon
  top: 0;
  right: -6px;
