.section {
  &--intro {
    padding-top: 40px;

    .logo {
      margin: 0 auto 30px;

      &__img {
        height: 90px;
      }
    }
  }
}

.intro {
  &__title {
    font-size: 1.2em;
    line-height: 140%;
  }

  &__logo {
    position: absolute;
    left: 50%;
    top: 50%;

    &-img {
      position: relative;
      margin-left: -50%;
      margin-top: -100%;
      width: 8em;
    }
  }
}

.buttons {
  padding: 0 16px;

  &__link {
    color: $color.primary;
    font-weight: 400;
  }
}

.user-consent {
  .so-checkbox {
    &:before {
      width: 38px;
      height: 38px;
    }

    &__label {
      &:before {
        width: 16px;
        height: 16px;
      }

      &:after {
        width: 16px;
        height: 16px;
      }

      &-text {
        font-size: 12px;
      }
    }
  }
}

.language-select {
  margin-top: 10px;

  &__icon {
    width: 20px;
    height: 20px;
    margin: 0 auto;
  }
}

.message {
  padding: 20px;
  line-height: 150%;

  &--success {
    background: #e6ffe6;
  }
}
