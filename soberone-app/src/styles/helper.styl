::-webkit-scrollbar {
  display: none;
}

// Alignment

.align {
  &--right {
    float: right;
  }
  &--left {
    float: left;
  }
  &--center {
    margin: 0 auto;
  }
}

// Typography

.heading {
  // h1
  &--h1 {
    font-size: 24px;
    line-height: 32px;
  }
  // h2
  &--h2 {
    font-size: 20px;
    line-height: 26px;
  }
  // h3
  &--h3 {
    font-size: 18px;
    line-height: 24px;
  }
  // h4
  &--h4 {
    font-size: 16px;
    line-height: 21px;
  }
  // h5
  &--h5 {
    font-size: 14px;
    line-height: 19px;
  }
  // h6
  &--h6 {
    font-size: 12px;
    line-height: 18px;
    text-transform: uppercase;
    letter-spacing: 0.75px;
  }
}

.text {
  &--primary {
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0.15px;
  }
  &--compact {
    font-size: 16px;
    line-height: 20px;
    letter-spacing: 0.15px;
  }
  &--caption {
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0.1px;
  }
  &--small {
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.2px;
  }
  &--xsmall {
    font-size: 10px;
    line-height: 12px;
    letter-spacing: 0.15px;
  }
  &--xxsmall {
    font-size: 8px;
    line-height: 10px;
    letter-spacing: 0.2px;
  }
  &--uppercase {
    text-transform: uppercase;
    letter-spacing: 0.75px;
  }
  // Aligh
  &--center {
    text-align: center;
  }
  &--left {
    text-align: left;
  }
  &--right {
    text-align: right;
  }
}

// Display

.display {
  &--none {
    display: none;
  }
  &--block {
    display: block;
  }
  &--initial {
    display: initial
  }
}

// Margins

make-margins($breakpoint, $directions, $sizes)
    for $direction, $value in $directions
        &{$direction}--{$breakpoint}
            for $size, $k in $sizes
                &{'-'}{$size}
                    if $value == "x"
                        margin-left: ($k * $multiplicity)
                        margin-right: ($k * $multiplicity)
                    else if $value == "y"
                        margin-top: ($k * $multiplicity)
                        margin-bottom: ($k * $multiplicity)
                    else
                        margin-{$value}: ($k * $multiplicity)


margin_init($breakpoints, $directions, $sizes)
    for $breakpoint, $width in $breakpoints
        if $width == 0
            make-margins($breakpoint, $directions, $sizes)
        else
            @media (max-width: $width)
                make-margins($breakpoint, $directions, $sizes)

.m
    margin_init($breakpoints, $directions, $sizes)

// Paddings

make-paddings($breakpoint, $directions, $sizes)
    for $direction, $value in $directions
        &{$direction}--{$breakpoint}
