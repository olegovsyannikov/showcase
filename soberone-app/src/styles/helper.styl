                    else if $value == "y"
                        padding-top: ($k * $multiplicity)
                        padding-bottom: ($k * $multiplicity)
                    else
                        padding-{$value}: ($k * $multiplicity)


padding_init($breakpoints, $directions, $sizes)
    for $breakpoint, $width in $breakpoints
        if $width == 0
            make-paddings($breakpoint, $directions, $sizes)
