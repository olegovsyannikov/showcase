.list
    &--materials &__item
    &--tasks &__item
        display: block;
        padding: 0 16px
        box-sizing: border-box;
    &--tasks &__item + &__item
    &--materials &__item + &__item
        padding-top: 16px;

    &--tools &__item
        display: block;
        padding: 0 12px 12px 12px
        box-sizing: border-box;

    &--timeline
        background: #ffffff;
        padding-bottom: 86px;
        box-sizing: border-box;
        flex: 8;
    &--timeline &__item
        position: relative;
        border-bottom: 1px solid #ebeff2
    &--answers
        counter-reset: d;
        list-style: none;
    &--answers &__item
        position: relative;
        padding-left: 32px;
        margin-bottom: 16px;
        &:last-child
            margin-bottom: 0px;
        &:before
            position: absolute;
            left: 0;
            top: 0;
            height: 20px;
            width: 20px;
            font-size: 14px;
            line-height: 20px;
            color: rgba($color.primary, 0.54);
            text-align: left;
            content: counters(d, '.', decimal) '. ';
            counter-increment: d;
        &:after
            display: table;
            clear: both;
            content: " ";
        &-question
            margin-bottom: 8px;
            font-size: 14px;
            line-height: 20px;
            color: rgba($color.primary, 0.54);
        &-answer
            display: inline-block;
            float: left;
            font-size: 16px;
            line-height: 24px;
            position: relative;
            max-width: 100%;
            color: rgba($color.primary, 0.89);
            letter-spacing: 0.15px;
            white-space: pre-wrap;
            word-wrap: break-word;
            &--empty
                font-size: 14px;
                line-height: 18px;
                background: $color.grey-4;
                color: #5D52D4;
                padding: 0 8px;
                letter-spacing: 0.1px;
                text-align: center;
                border: 1px solid #5D52D4;
                border-radius: 10px;
                cursor: pointer;

    &--decimal
        counter-reset: d;
        list-style: none;
    &--decimal &__item
        position: relative;
        padding-left: 32px;
        &:before
            position: absolute;
            left: 0;
            top: 0;
            height: 20px;
            width: 20px;
            font-size: 14px;
            line-height: 20px;
            color: rgba($color.primary, 0.54);
            text-align: left;
            content: counters(d, '.', decimal) '. ';
            counter-increment: d;
        &-title
            font-size: 14px;
            line-height: 20px;
            letter-spacing: 0.1px;
            color: rgba($color.primary, 0.54);
        &-title + &-text
            margin-top: 12px;
            font-size: 16px;
            line-height: 24px;
            display: inline-block;
            color: rgba($color.primary, 0.89);

    &--inficators
        letter-spacing: -0.31em;
    &--indicators &__item
        width: 33.333333%;
        display: inline-block;

    &--social
        letter-spacing: -0.31em
        margin: 0 -6px;
    &--social &__item
        display: inline-block;
        vertical-align: middle;
        letter-spacing: normal;
        padding: 0 6px;

    &--questions &__item
        padding-bottom: 20px;
        &:last-child
          padding-bottom: 0px;
        &-text
            &--hint
                display: block;
                margin-top: -20px;
                color: rgba($color.primary,0.54)
                font-size: 12px
                line-height: 16px
                ol
                    counter-reset: a;
                    list-style: none;
                    li
                        position: relative;
                        padding-left: 24px;
                        font-size: 12px;
                        line-height: 18px;
                        &:before
                            position: absolute;
                            left: 0;
                            top: 0;
                            height: 18px;
                            width: 18px;
                            line-height: 18px;
                            text-align: center;
                            content: counters(a, '.', decimal) '. ';
                            counter-increment: a;
                    li + li
                        margin-top: 6px;
    &--flex
        display: flex;
    &--flex &__item
        flex: 0;
        &--w1
            flex: 1
        &--w2
            flex: 2
        &--w3
            flex: 3
        &--w4
            flex: 4
        &--w5
            flex: 5

    &--logos
        margin: 0 -10px;
        letter-spacing: -0.31em;
    &--logos &__item
        padding: 0 10px;
        display: inline-block;
        vertical-align: middle;
        letter-spacing: normal;

    &--interesting
        width: 100%;
        overflow-x: auto;
        padding: 0 12px;
        display: flex;
        box-sizing: border-box;

    &--interesting::-webkit-scrollbar {
        display: none;
    }

    &--interesting &__item
        min-width: 222px;
        padding: 0 12px 0 0;
        box-sizing: border-box;

@media only screen and (max-width: 411px)

    .list
        &--social &__item
            display: block;
            margin-bottom: 10px;

@media only screen and (max-width: 320px)

    .list
        &--tools &__item
            padding: 0 10px 10px 10px
