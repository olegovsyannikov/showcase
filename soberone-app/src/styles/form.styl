.form
    &__block
        margin-bottom: 8px;
    &__title
        padding: 14px 0px;
        &-text
            font-family: $font.main;
            font-size: 14px;
            color: rgba(0,0,0,0.54);
            letter-spacing: 2px
            line-height: 20px;
            text-transform: uppercase;
    &__label
        position: relative
        display: inline-block
        vertical-align: middle
        margin: 24px 0 24px 0;
        &-text
            display: block
            position: absolute
            left: 0
            color: $color.primary
            font-size: 15px
            line-height: 20px
            pointer-events: none
            white-space: nowrap;
            &--placeholder
                top: 5px
                transition: all .2s ease-in-out
                opacity: 0.6;
            &--hint
                top: -19px;
                font-size: 12px;
                line-height: 18px;
                opacity: 0.6;
            &--message
                width: 100%;
                text-align: left;
                bottom: -24px;
                font-size: 12px;
                line-height: 24px;
        &--wide
            width: 100%;
        &--time
            margin-left: 65px;
            width: 120px;
            &:after
                position: absolute;
                right: 0;
                top: 0;
                content: "\F107";
                font-family: "icons";
                font-size: 24px;
                line-height: 24px;
                color: rgba($color.primary, 0.54);
        &--time .form__input
            height: 21px !important

        &--small
            margin: 0;


    &__label + &__button
        margin-left: 7px;

    &__select
        height: 28px
        margin: 24px 0 28px 0;

    &__input
        width: 100%
        border: 0
        padding: 4px 0 7px 0;
        outline: none
        font-size: 16px !important;
        background: transparent
        line-height: 20px !important;
        min-height: 31px;
        letter-spacing: 0.15px;
        resize: none;
        box-shadow: inset 0 -1px 0 0 rgba(174, 179, 188, 0.55);
        box-sizing: border-box
        vertical-align: middle;
        -webkit-appearance: none;
        border-radius: 0;
        hr
            display: none;
        // &:invalid
        //     box-shadow:none;
        &:focus
            box-shadow: inset 0 -2px 0 0 $color.primary-light
            & + .form__label-text--placeholder
                top: -19px;
                font-size: 12px;
                line-height: 18px;
        &[value]
        &[data-empty="false"]
            & + .form__label-text--placeholder
                top: -19px;
                font-size: 12px;
                line-height: 18px;
        &--error,
        &--error:focus
            box-shadow: inset 0 -2px 0 0 $color.danger
            & ~ .form__label-text--placeholder,
            & ~ .form__label-text--message
                color: $color.danger

        &--date
            position: relative;
            padding-right: 32px;
            &::-webkit-calendar-picker-indicator {
              color: transparent;
              background: none;
              z-index: 1;
              top: 0;
              bottom: 0;
              right: 0;
              position: absolute;
              cursor: pointer;
            }
            &:after
                position: absolute;
                // right: 24px;
                right: 0;
                top: 0;
                content: "\F103";
                font-family: "icons";
                font-size: 24px;
                line-height: 24px;
                color: rgba($color.primary, 0.54);
            & > div:first-child
            & > div:first-child > div:first-child
            & > div:first-child > input
                width: 100% !important;
                font-size: 15px !important;
                height: auto !important;
                line-height: 20px !important;
                min-height: 20px !important;
                bottom: auto !important;

        &--time
            position: relative;
            padding-right: 32px;
            max-width: 120px;
    &__group--disabled
        pointer-events: none
    &__group--disabled &__input
        border-bottom: 1px dotted rgba($color.primary, 0.3)
        color: rgba($color.primary, 0.3);
        box-shadow: none;
    &__group--disabled
        input
            color: inherit !important
    &__group--disabled &__label-text,
    &__group--disabled &__label--time:after
        color: rgba($color.primary, 0.3);



    &--inverse &__label
        &-text
            color: rgba($color.white, 50)
    &--inverse &__input
        color: rgba($color.white, 80)
        &:disabled
            box-shadow: none;
            color: rgba($color.white, 60)
            border-bottom: 1px dotted rgba($color.white, 0.3)
            opacity: 0.3
        &--error,
        &--error:focus
            color: $color.danger
            box-shadow: inset 0 -2px 0 0 $color.danger
            & ~ .form__label-text--placeholder,
            & ~ .form__label-text--message
                color: $color.danger

        &--date
            &:after
                color: rgba($color.white, 0.7);
            & > div:first-child
            & > div:first-child > div:first-child
            & > div:first-child > input
                color: inherit !important

    &--subscribe
        margin-top: -16px;
