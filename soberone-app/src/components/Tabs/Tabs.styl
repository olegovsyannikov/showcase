.tabs
    position: relative;
    height: 100%;
    &__header
        position: relative;
        letter-spacing: -0.31em;
        box-shadow: 0px 0px 10px rgba(8, 8, 51, 0.04), 0px 0px 3px rgba(8, 8, 51, 0.04);
        z-index: 100;
        &-item
            width: 50%;
            display: inline-block;
            vertical-align: middle;
            letter-spacing: normal;
            text-align: center;
            font-size: 16px;
            line-height: 48px;
            font-weight: 600;
            color: $theme.tabs.default.color;
            box-shadow: inset 0 -1px 0 0 $theme.tabs.default.border;
            &:hover
                cursor: pointer;
            &--active
                color: $theme.tabs.active.color;
                box-shadow: inset 0 -3px 0 0 $theme.tabs.active.border;
        small
            font-size: 12px;
            font-weight: 300;
            line-height: 16px;
            &:before
                content: " ("
            &:after
                content: ")"
    &__content
        position: absolute;
        left: 0;
        right: 0;
        z-index: 1;
        height: calc(100% - 48px);
        overflow-y: scroll;
        -webkit-overflow-scrolling: touch;
        &-item
            display: flex;
            min-height: 100%;
            align-items: stretch;
            flex-direction: column;
