.range
    position: relative;
    display: block;
    &__input
        line-height: 24px;
        height: 24px;
        font-size: 15px;
        width: 100%;
        margin: 0;
        border: 0;
        padding: 0;
        border-bottom: 1px solid #D3D5DA;
        -moz-appearance:textfield;
        &::-webkit-outer-spin-button,
        &::-webkit-inner-spin-button
            -webkit-appearance: none;
            margin: 0;
        &:focus
            outline: none;
        &:disabled
            background: #ffffff;
    &__header
        position: relative;
        height: 24px;
        margin-bottom: 10px;
    &__footer
        height: 24px;
        position: relative;
    &__title
        display: inline-block;
        vertical-align: middle;
        font-family: $font.main;
        font-size: 18px;
        color: rgba($color.primary,0.89);
        line-height: 24px;
        padding-right: 6px;
    &__status
        position: absolute;
        right: 0;
        top: 0;
        display: inline-block;
        vertical-align: middle;
        font-family: $font.main;
        font-size: 14px;
        padding: 0px 10px;
        color: rgba(0,0,0,0.54);
        line-height: 24px;
        &--0
            color: $theme.status.item0;
        &--1
            color: $theme.status.item1;
        &--2
            color: $theme.status.item2;
        &--3
            color: $theme.status.item3;
        &--4
            color: $theme.status.item4;
        &--5
            color: $theme.status.item5;
        &--6
            color: $theme.status.item6;
    &__power
        font-size: 12px;
        color: rgba($color.primary,0.54);
        line-height: 16px;
        &--min
            float: left;
        &--max
            float: right;
    &__help
        display: inline-block;
        width: 18px;
        height: 18px;
        text-align: center;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 10px;
        &-text
            font-size: 12px;
            color: rgba(0,0,0,0.54);
            line-height: 16px;
        &:focus
            border-color: $color.accent;
            background: $color.accent;
            outline: none;
        &:focus &-text
            color: $color.white
    &__body
        position: relative;
        width: 100%;
        // & > div > div
        //     margin: 0 !important;
        //     height: 24px !important;
        //     & > div
        //         top: 11px !important;
    &__body:hover + &__footer,
    &__body:active + &__footer
        opacity: 1;
    &__bg
        position: absolute;
        height: 2px;
        width: 100%
        top: 50%;
        left: 0;
        margin: 0;
        overflow: hidden;
        border: 0;
        padding: 0;
        transform: translate(0,-1px);
        background: 0 0;
        display: flex;
        &-lower
        &-upper
            flex: 0;
            position: relative;
            border: 0;
            padding: 0;
        &-lower
            background-color: $color.accent
        &-upper
            background-color: rgba(0,0,0,0.25)
    &__control[type="range"]
        -webkit-appearance: none;
        width: 100%;
        height: 24px;
        margin: 0;
        cursor: pointer;
        z-index: 1;
        background: 0 0;
        user-select: none;
        outline: 0;
        padding: 0;
        &::-webkit-slider-runnable-track
            cursor: pointer;
            box-shadow: none;
            border-radius: 1px;
            border: 0;
            min-width: 0px;
            align-self: center;
            box-sizing: border-box;
            display: block;
            -webkit-user-modify: read-only;
            flex: 1 1 0%;
        &::-webkit-slider-thumb
            box-shadow: none;
            border: 0
            height: 12px;
            width: 12px;
            border-radius: 50%;
            background: $color.accent;
            cursor: pointer;
            -webkit-appearance: none;
            transition: transform .18s cubic-bezier(.4,0,.2,1),border .18s cubic-bezier(.4,0,.2,1),box-shadow .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1);
            transition: transform .18s cubic-bezier(.4,0,.2,1),border .18s cubic-bezier(.4,0,.2,1),box-shadow .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1),-webkit-transform .18s cubic-bezier(.4,0,.2,1)
            &:hover
                box-shadow: 0 0 0 6px rgba(68, 138, 255, 0.16);
        &::-moz-range-track
            width: 100%;
            height: 2px;
            cursor: pointer;
            box-shadow: none;
            background: 0 0;
            border: none
        &::-moz-range-thumb
            box-shadow: none;
            border: 0;
            height: 12px;
            width: 12px;
            border-radius: 50%;
            background: $color.accent;
            cursor: pointer;
            transition: transform .18s cubic-bezier(.4,0,.2,1),border .18s cubic-bezier(.4,0,.2,1),box-shadow .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1);
            transition: transform .18s cubic-bezier(.4,0,.2,1),border .18s cubic-bezier(.4,0,.2,1),box-shadow .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1),-webkit-transform .18s cubic-bezier(.4,0,.2,1)
            &:hover
                box-shadow: 0 0 0 6px rgba(68, 138, 255, 0.16);
        &::-ms-track
            width: 100%;
            height: 2px;
            cursor: pointer;
            background: transparent;
            border-color: transparent;
            color: transparent;
        &::-ms-fill-lower
            background: transparent;
            border: 0;
            border-radius: 2px;
            box-shadow: none;
        &::-ms-fill-upper
            background: transparent;
            border: 0px;
            border-radius: 2px;
            box-shadow: none;
        &::-ms-tooltip
            display: none;
        &::-ms-thumb
            box-shadow: none;
            border: 0
            height: 12px;
            width: 12px;
            border-radius: 50%;
            background: $color.accent;
            cursor: pointer;
            transition: transform .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1);
            transition: transform .18s cubic-bezier(.4,0,.2,1),background .28s cubic-bezier(.4,0,.2,1),-webkit-transform .18s cubic-bezier(.4,0,.2,1)
            &:hover
                box-shadow: 0 0 0 6px rgba(68, 138, 255, 0.16);
        &:focus
            outline: none;
        &:active
            &::-webkit-slider-thumb
                transform: scale(1.3);
            &::-moz-range-thumb
                transform: scale(1.3);

        &:active
            &::-webkit-slider-thumb
                box-shadow: none

        &:disabled:focus::-webkit-slider-thumb,
        &:disabled:active::-webkit-slider-thumb,
        &:disabled::-webkit-slider-thumb
            transform: scale(1);
            border: 2px solid #ffffff;
            background: #D3D5DA

        &:disabled:focus::-moz-range-thumb,
        &:disabled:active::-moz-range-thumb,
        &:disabled::-moz-range-thumb
            transform: scale(1);
            border: 2px solid #ffffff;
            background: #D3D5DA;


        &:disabled + .range__bg > .range__bg-lower
            background-color: #D3D5DA;

        &:disabled + .range__bg > .range__bg-upper
            background-color: #D3D5DA;


        &:disabled:focus::-ms-thumb,
        &:disabled:active::-ms-thumb,
        &:disabled::-ms-thumb
            transform: scale(1);
            border: 2px solid #ffffff;
            background: #D3D5DA;

        &:disabled::-ms-fill-lower
            background: #D3D5DA;

        &:disabled::-ms-fill-upper
            background: #D3D5DA;

        &:disabled::-webkit-slider-thumb
            &:hover
                box-shadow: none
        &:disabled::-moz-range-thumb
            &:hover
                box-shadow: none
        &:disabled::-ms-thumb
            &:hover
                box-shadow: none

    &--disabled
        &:after
            color: #CBCFD4
    &--disabled &__helper
        &:before
            color: #CBCFD4
    &--disabled &__input
        border-bottom: 1px dashed #d3d5da

    &--rating &__title
        font-size: 18px;
        color: rgba($color.primary, 0.89)
        font-weight: normal;

    & + .range
        margin-top: 5px;


.rangeslider
    position: relative
    display: block
    border-radius: 1px
    &:before
        content: "";
        position: absolute;
        top: 11px;
        height: 2px;
        width: 100%;
        left: 0;
        background: rgba(0,0,0,0.25)
    &__fill
        // background: $color.accent
        position: absolute
        display: block
        border-radius: 1px
        &:before
            content: "";
            position: absolute;
            top: 11px;
            height: 2px;
            width: 100%;
            left: 0;
            background: $color.accent
    &__handle
        background: $color.accent
        cursor: pointer
        display: inline-block
        width: 12px
        height: 12px
        top: 6px
        touch-action: pan-y
        -ms-touch-action: pan-y
        position: absolute
        border-radius: 50%
        &:active
            width: 16px
            height: 16px
            top: 4px

    &--active &__handle
        width: 16px
        height: 16px
        top: 4px

    &--horizontal
        height: 24px
        width: 100%

    &--horizontal &__fill
        top: 0
        height: 100%

    &--disabled
        opacity: 0.4

input[type="range"]:focus + .range .range__handle
    box-shadow: 0 0 8px rgba(255, 0, 255, 0.9)
