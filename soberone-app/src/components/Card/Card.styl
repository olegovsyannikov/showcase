.card
    position: relative;
    overflow: hidden;
    display: block;
    box-sizing: border-box;
    z-index: 1;

    &__body
        box-sizing: border-box;
        width: 100%;

    &__title
        line-height: 20px;
        font-size: 18px;
        font-weight: bold;
        letter-spacing: 0.1px;
        color: rgba($color.primary, 0.89);

    &__subtitle
        line-height: 15px;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        color: rgba($color.primary, 0.54);

    &__figure
        position: relative;
        padding-top: 55%;
        background: rgba($color.primary, 0.25)
        overflow: hidden;
        &-img
            position: absolute;
            left: 50%;
            top: 50%;
            min-width: 100%;
            min-height: 100%;
            transform: translate(-50%,-50%);
            object-fit: cover;

    &__announce
        display: block;
        line-height: 20px;
        font-size: 14px;
        letter-spacing: 0.1px;
        white-space: pre-wrap;
        color: rgba($color.primary, 0.54);

    &__author
        display: flex;
        align-items: center;
        &-avatar
            height: 32px;
            width: 32px;
            margin-right: 8px;
            border-radius: 50%;
            overflow: hidden;
        &-img
            display: block;
            width: 32px;
            height: 32px;
            &.icon
                text-align: center;
                font-size: 16px;
                line-height: 32px;
                color: rgba($color.primary, 0.54)
        &-name
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
            letter-spacing: 0.1px;
            color: rgba($color.primary, 0.54);

    &__subtitle + &__title,
    &__title + &__announce
        margin-top: 4px;

    &__announce + &__author
    &__title + &__author
        margin-top: 12px;

    &__meta
        margin-top: 16px;

    // Types

    // Primary Type
    &--primary
        background: $color.white
        box-shadow: 0px 6px 24px rgba(#E1E3E6, 0.8);
        color: rgba($color.primary, 0.54);
        border-radius: 16px;
        &:hover
            cursor: pointer;

    &--primary &__body
        padding: 16px;

    &--primary &__title
        line-height: 27px;
        font-size: 21px;

    &--primary &__author
        &-avatar
            background: $theme.bg

    // Secondary Type
    &--secondary
        background: $theme.bg
        border-radius: 16px;

    &--secondary &__body
        padding: 16px;

    &--secondary &__author
        &-avatar
            background: $color.white

    // Icon Type
    &--icon
        background: $color.white
        border-radius: 16px;
        &:hover
            cursor: pointer;

    &--icon &__header
        float: left;
        padding: 12px 12px 12px 12px;

    &--icon &__body
        padding: 12px;
        padding-left: 72px;

    &--icon &__title
        line-height: 22px;
        font-size: 17px;

    &--icon &__icon
        font-size: 48px;
        line-height: 48px;
        display: inline-block;
        width: 48px;
        color: rgba($color.primary, 0.54);

    // Small Type
    &--small
        background: $color.white
        border-radius: 12px;
        height: 100%;
        &:hover
            cursor: pointer;

    &--small &__body
        padding: 12px 12px 16px 12px;

    &--small &__title
        line-height: 23px;
        font-size: 16px;

    // Transparent Type
    &--transparent
        color: $theme.task.header;

    &--transparent &__title
        font-size: 32px;
        line-height: 32px;
        font-weight: bold;
        color: $theme.task.title;

    &--transparent &__author,
    &--transparent &__subtitle
        color: rgba($color.white,0.7);

    &--transparent &__body
        padding: 0 0 16px 0;
        &:only-child
          padding: 0;

    & + &
        margin-top: 12px;

    // Overlay type
    &--overlay
        position: relative
        background: $color.primary
        box-shadow: 0px 6px 24px rgba(#E1E3E6, 0.8);
        color: rgba($color.primary, 0.54);
        border-radius: 16px;
        &:hover
            cursor: pointer;

    &--overlay &__body
        position: absolute
        bottom: 0
        padding: 16px
        background: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);

    &--overlay &__title
        line-height: 27px;
        font-size: 21px;
        color: $color.white

    &--overlay &__announce
        color: $color.white

    &--overlay &__subtitle
        display: none;

    &--overlay &__figure
        background: $color.primary
        padding-top: 70%
    &--overlay &__figure-overlay
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background: rgba($color.primary, 0.15)

    &--overlay .badge--time
        color: rgba($color.white, 0.6)

    // Tools

    &--tool-tests &__body{
        padding-right: 146px;
        background: $color.white url(/assets/images/test.svg) 100% 100% no-repeat;
        background-size: 134px;
    }

    // Answer

    &--answer &__body
        display: flex;
        flex-direction: column;
        background: $theme.task.otherAnswers.bg;
        box-shadow: none;
        max-height: 160px;
        overflow: hidden;
        &:after
            position: absolute
            bottom: 0;
            content: "";
            height: 20px;
            width: 100%;
            left: 0;
            background: linear-gradient(180deg, rgba(235, 239, 242, 0) 0%, $theme.task.otherAnswers.bg 100%);

    &--answer &__author
        order: 1;
        flex-basis: 32px;
        min-height: 32px;
        margin-top: 0;
        margin-bottom: 12px;
        &-avatar
            background: $theme.task.otherAnswers.avatar.bg;
            color: $theme.task.otherAnswers.avatar.color;
            & .so-icon
              margin-top: 5px;
        &-name
          font-weight: 400;
          color: $theme.task.otherAnswers.author;
    &--answer &__announce
        order: 2;

    &--answer&--active &__body
        max-height: inherit;

    &[data-stage]:before
        content: attr(data-stage)
        display: block
        margin-bottom: 8px;
        line-height: 16px;
        font-size: 12px;
        letter-spacing: 0.75px;
        text-transform: uppercase;
